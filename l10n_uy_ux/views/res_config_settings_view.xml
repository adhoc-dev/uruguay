<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="res_config_settings_view_form">
        <field name="name">res.config.settings.view.form.inherit.l10n_uy_dgi</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="l10n_uy_edi.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <setting id="uy_dgi" position="inside">
                <div class="content-group">
                    <div class="row">
                        <field name="l10n_uy_dgi_crt_fname" invisible="1" force_save="1"/>
                        <label for="l10n_uy_dgi_crt" string="Certificate" class="col-lg-3 o_light_label"/>
                        <field name="l10n_uy_dgi_crt" widget="binary" filename="l10n_uy_dgi_crt_fname" help="Here need to upload the file with the Digital Certificate to operate in DGI"/>
                    </div>
                    <div class="row">
                        <label for="l10n_uy_dgi_crt_pass" class="col-lg-3 o_light_label"/>
                        <field name="l10n_uy_dgi_crt_pass" widget="password"/>
                    </div>
                </div>

                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="l10n_uy_ucfe_get_vendor_bills"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Vendor Bills</span>
                        <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                        <div>
                            <label for="l10n_uy_ucfe_get_vendor_bills" class="o_light_label"/>
                        </div>
                    </div>
                </div>

            </setting>

            <setting id="uy_ucfe" position="inside">
                <!-- Formato de reporte -->
                <label for="l10n_uy_report_params" string="Parametros de reporte" class="col-lg-3 o_light_label"/>
                <field name="l10n_uy_report_params"/>

            </setting>

        </field>
    </record>

</odoo>
